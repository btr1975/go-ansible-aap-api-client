# EditorConfig information: http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Set indent style for Python
[*.py]
indent_style = space
indent_size = 4

# Set indent style for JSON
[*.json]
indent_style = space
indent_size = 4
insert_final_newline = false

# Set indent style for GO-Lang
[*.go]
indent_style = tab

# Set indent style for XML and YAML
[*.{xml,yml,yaml}]
indent_style = space
indent_size = 2

# Set indent style for Makefile
[Makefile]
indent_style = tab

# Set *.cfg style
[*.cfg]
insert_final_newline = false
